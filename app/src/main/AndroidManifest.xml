<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.saxion.playground.orbisrunner">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LevelMaker"></activity>
        <activity android:name=".ui.GameActivity" />
        <activity android:name=".ui.demo.DemoGameplayActivity" />
        <activity android:name=".ui.SplashScreenActivity" />
        <activity android:name=".ui.SettingScreenActivity" />
        <activity android:name=".ui.ControlTestingActivity" />
        <activity android:name=".ui.StartScreenActivity" />
        <activity android:name="nl.saxion.playground.TestingMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.DeathScreenActivity" />
    </application>

</manifest>