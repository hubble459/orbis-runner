<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/silkscreen</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">38sp</item>
        <item name="fontFamily">@font/silkscreen_extended</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="Subtitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/silkscreen_extended</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
